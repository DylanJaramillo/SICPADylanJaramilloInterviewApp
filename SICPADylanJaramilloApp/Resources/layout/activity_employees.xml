<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/secondarybackground">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TextView
            android:text="Employees module"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="35px"
            android:paddingBottom="50px"
            android:textSize="25dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="10dp">


            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Search employees"
                android:inputType="text"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittextborder"
                android:id="@+id/etEmployeesSearch"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/searchIcon"
                android:id="@+id/btnEmployeesSearch"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/addenterprises"
                android:id="@+id/btnAddEmployees"/>



        </LinearLayout>



        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="430dp">



                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="620dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:background="#FF7A00">





                        <TextView
                            android:id="@+id/tvNameColumn"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="58dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvAgeColumn"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="35dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvPositionColumn"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="Position"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="45dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                         <TextView
                            android:id="@+id/tvEmailColumn"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="45dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvStatusColumn"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="25dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />








                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="2px"
                        android:minHeight="2px"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/linearLayout3">
                        <ListView
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/lsvEmployees" />
                    </LinearLayout>





                </LinearLayout>







            </HorizontalScrollView>








        </ScrollView>









    </TableLayout>

</LinearLayout>
