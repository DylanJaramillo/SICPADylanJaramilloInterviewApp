<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitemselector"
    android:gravity="center_vertical"
    android:padding="3dp">
    <LinearLayout
        android:id="@+id/Text"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dip">
        <TextView
            android:id="@+id/tvNameColumn"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:text="Test company"
            android:gravity="center_vertical|center"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tvAddressColumn"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:text="Test address"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|center"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tvPhoneColumn"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="5752387"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tvStatusColumn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="Active"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|center"
            android:textSize="14dp" />
    </LinearLayout>
</RelativeLayout>